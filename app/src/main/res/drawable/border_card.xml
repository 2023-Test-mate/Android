<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 카드 배경색 설정 -->
            <corners android:radius="8dp" /> <!-- 모서리 둥근 정도 설정 -->
        </shape>
    </item>
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
    <shape android:shape="rectangle">
        <stroke
            android:width="3dp"
        android:color="#004598" /> <!-- 테두리 선의 색상 -->
        <corners android:radius="8dp" /> <!-- 모서리 둥근 정도 설정 -->
    </shape>
</item>
</layer-list>
