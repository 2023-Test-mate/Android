<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbar_title"
                layout="@layout/header" />

            <!--  spinner  -->
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:background="@drawable/dialog_radius"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <HorizontalScrollView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/bg_book_image"
                            android:backgroundTint="@color/bookBgColor"
                            android:src="@drawable/book_red"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="12dp"/>

                        <android.widget.Button
                            android:layout_gravity="left"
                            android:layout_margin="4dp"
                            android:layout_width="35dp"
                            android:layout_height="24dp"
                            android:text="@string/kor"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_green_view"
                            android:textSize="@dimen/M13"
                            android:gravity="center"
                            style="?android:attr/borderlessButtonStyle"/>
                    </FrameLayout>

                    <ImageView
                        android:src="@drawable/add_image"
                        android:background="@drawable/bg_book_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/black.800"
                    android:layout_marginTop="60dp"
                    android:text="문제가 잘 나오는 곳 TOP3"
                    android:textSize="@dimen/M18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/R14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/top1"
                        android:layout_weight="1"
                        android:background="@drawable/top_view"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                    <TextView
                        android:layout_weight="6"
                        android:textSize="@dimen/R14"
                        android:text="자료"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:background="@drawable/top_view_side"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/R14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/top2"
                        android:layout_weight="1"
                        android:background="@drawable/top_view"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                    <TextView
                        android:layout_weight="6"
                        android:textSize="@dimen/R14"
                        android:text="교과서"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:background="@drawable/top_view_side"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/R14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/top3"
                        android:layout_weight="1"
                        android:background="@drawable/top_view"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                    <TextView
                        android:layout_weight="6"
                        android:textSize="@dimen/R14"
                        android:text="참고서"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:background="@drawable/top_view_side"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black.800"
                        android:layout_marginTop="60dp"
                        android:text="오답실수"
                        android:textSize="@dimen/M18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/black.300"
                        android:text="해당 이유로 문제를 많이 틀렸어요!"
                        android:textSize="@dimen/R14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:textColor="@color/black.800"
                    android:layout_marginTop="60dp"
                    android:text="공부 외 실패요소"
                    android:textSize="@dimen/M18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="26dp"
                    android:textColor="@color/black.300"
                    android:text="해당 요소를 고치면 성적을 올릴 수 있어요!"
                    android:textSize="@dimen/R14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.widget.Button
                    android:paddingLeft="16dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/R14"
                    android:text="@string/miss_1"
                    android:textColor="@color/green.500"
                    android:background="@drawable/popup_btn_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
    <!--navbar-->
    <LinearLayout
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_on" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/note_off" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/goal_off" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cal_off"/>

    </LinearLayout>

</LinearLayout>