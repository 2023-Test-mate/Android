<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="26.5dp"
                        android:paddingBottom="26.5dp"
                        android:paddingLeft="25dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:id="@+id/before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/before_btn"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/M14"
                            android:textColor="@color/black.800"
                            android:text="문제 제목"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"/>
                        <EditText
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/bg_white_view"
                            android:hint="문서 제목을 입력해 주세요"
                            android:textSize="@dimen/R14"
                            android:textColorHint="@color/black.200_1"
                            android:paddingLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/M14"
                            android:textColor="@color/black.800"
                            android:text="틀린 시험"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"/>
                        <android.widget.Button
                            android:paddingLeft="16dp"
                            android:id="@+id/signup_grade"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_white_view"
                            android:drawableRight="@drawable/arrow"
                            android:textColorHint="@color/black.200_1"
                            android:hint="학년정보를 선택해 주세요"
                            android:paddingRight="15dp"
                            android:textSize="14dp"
                            android:layout_marginLeft="16dp"
                            android:gravity="left|center"
                            android:stateListAnimator="@null"
                            android:layout_marginRight="33dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="34dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="문제"
                            android:textColor="@color/black.800"
                            android:textSize="@dimen/M14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/mdi_camera"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:text="카메라 촬영"
                                android:textSize="@dimen/R14"
                                android:textColor="@color/black.300"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/fe_picture"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:text="앨범 가져오기"
                                android:textSize="@dimen/R14"
                                android:textColor="@color/black.300"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:layout_marginTop="32dp"
                        android:background="@drawable/bg_white_view"
                        android:hint="문제를 텍스트로 입력하거나 사진을 올려주세요"
                        android:textSize="@dimen/R14"
                        android:gravity="top"
                        android:textColorHint="@color/black.200_1"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="136dp"/>
                    <TextView
                        android:layout_marginTop="40dp"
                        android:textSize="@dimen/M14"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black.800"
                        android:text="풀이"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@drawable/bg_white_view"
                        android:hint="풀이를 입력해 주세요"
                        android:textSize="@dimen/R14"
                        android:gravity="top"
                        android:textColorHint="@color/black.200_1"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"/>

                    <TextView
                        android:layout_marginTop="40dp"
                        android:textSize="@dimen/M14"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black.800"
                        android:text="시험 스타일"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@drawable/bg_white_view"
                        android:hint="시험 스타일을 입력해 주세요"
                        android:textSize="@dimen/R14"
                        android:gravity="top"
                        android:textColorHint="@color/black.200_1"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"/>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/M14"
                            android:textColor="@color/black.800"
                            android:text="오답이유"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ion_edit"
                            android:layout_marginLeft="7dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.widget.Button
                            android:layout_marginRight="8dp"
                            android:layout_width="58dp"
                            android:layout_height="34dp"
                            android:text="@string/reason_mistake"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_green_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>
                        <android.widget.Button
                            android:layout_marginRight="8dp"
                            android:layout_width="87dp"
                            android:layout_height="34dp"
                            android:text="@string/reason_timeout"
                            android:textColor="@color/black.300"
                            android:background="@drawable/bg_white_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>
                        <android.widget.Button
                            android:layout_width="87dp"
                            android:layout_height="34dp"
                            android:text="@string/reason_lackconcept"
                            android:textColor="@color/black.300"
                            android:background="@drawable/bg_white_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/M14"
                            android:textColor="@color/black.800"
                            android:text="문제 범위"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ion_edit"
                            android:layout_marginLeft="7dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.widget.Button
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_width="58dp"
                            android:layout_height="34dp"
                            android:text="@string/scope_1"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_green_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>
                        <android.widget.Button
                            android:layout_marginRight="8dp"
                            android:layout_width="71dp"
                            android:layout_height="34dp"
                            android:text="@string/scope_2"
                            android:textColor="@color/black.300"
                            android:background="@drawable/bg_white_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>
                        <android.widget.Button
                            android:layout_marginRight="8dp"
                            android:layout_width="71dp"
                            android:layout_height="34dp"
                            android:text="@string/scope_3"
                            android:textColor="@color/black.300"
                            android:background="@drawable/bg_white_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>
                        <android.widget.Button
                            android:layout_marginRight="8dp"
                            android:layout_width="71dp"
                            android:layout_height="34dp"
                            android:text="@string/scope_4"
                            android:textColor="@color/black.300"
                            android:background="@drawable/bg_white_view"
                            android:textSize="@dimen/M14"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.widget.Button
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="문제추가"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_green_view"
                            android:fontFamily="@font/notosanskr_medium"
                            android:textSize="@dimen/M16"
                            style="?android:attr/borderlessButtonStyle" />
                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    <LinearLayout
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nav_home"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_off" />
        <ImageButton
            android:id="@+id/nav_wrong"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/note_on" />
        <ImageButton
            android:id="@+id/nav_goal"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/goal_off" />
        <ImageButton
            android:id="@+id/nav_cal"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cal_off"/>

    </LinearLayout>

</LinearLayout>