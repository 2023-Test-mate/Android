<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center"
            android:text="과목 편집"
            android:textSize="@dimen/M18"
            android:textColor="@color/black.800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:text="과목이름"
        android:textSize="@dimen/R14"
        android:textColor="@color/black.800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/subjectName"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_white_view"
        android:hint="과목이름을 입력해 주세요"
        android:textSize="@dimen/R14"
        android:gravity="top"
        android:textColorHint="@color/black.200_1"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
    <TextView
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:text="표지 이미지 선택"
        android:textSize="@dimen/R14"
        android:textColor="@color/black.800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/bg_book_image"
            android:backgroundTint="@color/bookBgColor"
            android:src="@drawable/book_red"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:layout_marginRight="12dp"/>
        <GridLayout
            android:orientation="vertical"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_red"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_green"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_purple"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_yellow"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_black"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="42dp"/>
        <android.widget.Button
            android:id="@+id/subjectDeleteBtn"
            android:layout_marginRight="8dp"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:text="@string/delete"
            android:textColor="@color/red_1"
            android:background="@drawable/border_delete_view"
            android:textSize="@dimen/M16"
            android:gravity="center"
            android:stateListAnimator="@null"/>

        <android.widget.Button
            android:id="@+id/subjectConfirmBtn"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:text="확인"
            android:textColor="@color/white"
            android:background="@drawable/bg_green_view"
            android:textSize="@dimen/M16"
            android:gravity="center"
            android:stateListAnimator="@null"/>

    </LinearLayout>
</LinearLayout>