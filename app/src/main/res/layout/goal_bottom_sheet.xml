<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="60dp"
    android:background="@drawable/bg_goalbottomsheet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goalTitle"
        android:textColor="#2C2C2C"
        android:textSize="14dp"
        android:layout_marginBottom="20dp"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/edit_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:drawableTop="@drawable/edit_icon"
            android:drawablePadding="3dp"
            android:background="@drawable/bg_white_view"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="53dp"
            android:paddingRight="53dp"
            android:layout_marginRight="4dp"/>

        <android.widget.Button
            android:id="@+id/delete_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            android:drawableTop="@drawable/delete_icon"
            android:drawablePadding="3dp"
            android:background="@drawable/bg_white_view"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:paddingLeft="53dp"
            android:paddingRight="53dp"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>
</LinearLayout>