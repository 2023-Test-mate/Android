<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="match_parent"
    android:paddingTop="52dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout">
    <ImageButton
        android:src="@drawable/cancel"
        android:background="@color/white"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_iv"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@android:color/transparent"
            app:civ_border_overlay="true"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/profile"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:text="@string/user_name"
                    android:textColor="@color/black.800"
                    android:textSize="@dimen/M18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/edit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:text="@string/user_email"
                android:textColor="@color/black.500"
                android:textSize="@dimen/R14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_gravity="center"
            android:text="알림설정"
            android:textSize="@dimen/M14"
            android:textColor="@color/black.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ToggleButton
            android:layout_gravity="center"
            android:id="@+id/toggle"
            android:background="@drawable/toggle_selector"
            android:textOn=""
            android:textOff=""
            android:layout_width="40dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_gravity="center"
            android:text="@string/use_information"
            android:textSize="@dimen/M14"
            android:textColor="@color/black.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/after"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_gravity="center"
            android:text="버전 정보"
            android:textSize="@dimen/M14"
            android:textColor="@color/black.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/after"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_gravity="center"
            android:text="@string/inquiry"
            android:textSize="@dimen/M14"
            android:textColor="@color/black.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/after"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:text="로그아웃"
                android:textColor="@color/black.300"
                android:textSize="@dimen/M14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/black.200"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="계정삭제"
                android:textSize="@dimen/M14"
                android:textColor="@color/red_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>