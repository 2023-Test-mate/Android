<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center"
            android:text="과목 추가"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black.800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/finish_edit_subject"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:text="과목이름"
        android:textSize="@dimen/R14"
        android:textColor="@color/black.800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/subjectName"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_white_view"
        android:hint="과목이름을 입력해 주세요"
        android:textSize="@dimen/R14"
        android:gravity="top"
        android:textColorHint="@color/black.200_1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:inputType="text"/>
    <TextView
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:text="표지 이미지 선택"
        android:textSize="@dimen/R14"
        android:textColor="@color/black.800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/book_img"
            android:background="@drawable/bg_book_image"
            android:backgroundTint="@color/bookBgColor"
            android:src="@drawable/book_red"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:layout_marginRight="12dp"/>
        <GridLayout
            android:orientation="vertical"
            android:columnCount="2"
            android:rowCount="3"
            android:paddingLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/red"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_red"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/green"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_green"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/purple"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_purple"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/yellow"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_yellow"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/blue"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/black"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_white_view"
                android:src="@drawable/book_black"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="42dp"/>
        <android.widget.Button
            android:id="@+id/subjectAddBtn"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:text="추가"
            android:textColor="@color/white"
            android:background="@drawable/bg_green_view"
            android:textSize="@dimen/M16"
            android:gravity="center"
            android:stateListAnimator="@null"/>
    </LinearLayout>
</LinearLayout>