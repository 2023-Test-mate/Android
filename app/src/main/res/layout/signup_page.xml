<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/backarrow"
        android:gravity="center"
        android:text="@string/join"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:text="@string/email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/editborder"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:hint="이메일을 입력해 주세요"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_marginBottom="10dp"
        android:textColor="#000000" />
    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:hint="비밀번호를 입력해 주세요"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/eye"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/editborder"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:text="@string/passwordcheck"/>
    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:hint="비밀번호를 입력해 주세요"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/eye"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/editborder"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:text="@string/name"/>
    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:hint="이름을 입력해 주세요"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/editborder"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:text="@string/age"/>
    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:hint="학년정보를 선택해 주세요"
        android:layout_marginBottom="30dp"
        android:drawableRight="@drawable/arrow"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/editborder"/>

    <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/joinbackground"
        android:text="@string/join"
        android:textColor="#ffffff"
        android:textSize="19sp"></Button>

</LinearLayout>